<h1><%= @student.name %></h1>
<p>Github: <%= @student.github_username %></p>
<p>Passed assessment? <%= @student.passed_assessment %></p>

<% if logged_in? && !@student.passed_assessment %>
  <form method="POST" action="/students/<%= @student.id %>">
    <input type="hidden" value="PUT" name="_method">
    <input type="hidden" value="true" name="student[passed_assessment]">
    <input type="submit" value="Pass">
  </form>
<% end %>