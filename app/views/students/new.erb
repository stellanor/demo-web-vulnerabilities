<% if @student && @student.errors %>
  <ul>
  <% @student.errors.full_messages.each do |err| %>
    <li><%= err %></li>
  <% end %>
  </ul>
<% end %>

<h1>Register for Code Shoe-camp!</h1>

<form action="/students" method="POST">
  <label for="name_input">Name:</label>
  <input type="text" name="student[name]" id="name_input">

  <label for="github_username_input">Github username:</label>
  <input type="text" name="student[github_username]" id="github_username_input">
  <input type="submit">
</form>

<p><a href="/login">Teacher login</a></p>